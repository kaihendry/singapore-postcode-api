{
  "name": "postcode",
  "profile": "singapore-postcode-github-workflow",
  "regions": [
    "ap-southeast-1"
  ],
  "stages": {
    "production": {
      "domain": "postcode.dabase.com"
    }
  },
  "hooks": {
    "build": "CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server *.go"
  },
  "actions": [
    {
      "name": "email.backend",
      "type": "email",
      "emails": [
        "hendry+postcode@iki.fi"
      ]
    }
  ],
  "alerts": [
    {
      "metric": "http.count",
      "statistic": "sum",
      "threshold": 100,
      "action": "email.backend"
    },
    {
      "metric": "http.5xx",
      "statistic": "sum",
      "threshold": 1,
      "period": "1m",
      "action": "email.backend"
    },
    {
      "metric": "http.4xx",
      "statistic": "sum",
      "threshold": 50,
      "period": "5m",
      "action": "email.backend"
    },
    {
      "metric": "http.latency",
      "statistic": "avg",
      "threshold": 1000,
      "period": "5m",
      "action": "email.backend",
      "description": "Large traffic spike"
    }
  ]
}
